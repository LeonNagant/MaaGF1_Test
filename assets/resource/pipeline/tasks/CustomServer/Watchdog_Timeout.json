{
    "!Watchdog_Timeout_Test": {
        "next": [
            "Feed_Watchdog_Initial"
        ]
    },
    "Feed_Watchdog_Initial": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_feed",
        "custom_action_param": {
            "timeout_ms": 3000,
            "info": "超时测试看门狗 - 3秒超时"
        },
        "pre_delay": 100,
        "post_delay": 500,
        "next": [
            "Notify_Initial_Feed"
        ]
    },
    "Notify_Initial_Feed": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "看门狗超时测试：初始喂狗完成（自动启动），将等待{wait_time}秒触发超时（超时阈值：3秒）",
            "parameters": {
                "wait_time": "10"
            }
        },
        "pre_delay": 100,
        "post_delay": 10000,
        "next": [
            "Check_Timeout_Status"
        ]
    },
    "Check_Timeout_Status": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "等待结束！看门狗应该已经触发超时警告并自动停止。测试步骤：{count}",
            "parameters": {
                "count": "{increment_Task_Counter}"
            }
        },
        "pre_delay": 100,
        "post_delay": 2000,
        "next": [
            "Feed_After_Timeout"
        ]
    },
    "Feed_After_Timeout": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_feed",
        "custom_action_param": {
            "timeout_ms": 5000,
            "info": "超时后重新启动看门狗 - 5秒超时"
        },
        "pre_delay": 1000,
        "post_delay": 500,
        "next": [
            "Notify_Recovery"
        ]
    },
    "Notify_Recovery": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "超时后重新喂狗，看门狗已自动重启并开始新的计时周期",
            "parameters": {}
        },
        "pre_delay": 100,
        "post_delay": 2000,
        "next": [
            "Final_Feed"
        ]
    },
    "Final_Feed": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_feed",
        "custom_action_param": {
            "info": "最后一次喂狗"
        },
        "pre_delay": 1000,
        "post_delay": 500,
        "next": [
            "Final_Summary"
        ]
    },
    "Final_Summary": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "看门狗超时测试完成，总执行步骤：{count}。看门狗仍在运行中，将在5秒后自动超时停止。",
            "parameters": {
                "count": "{increment_Task_Counter}"
            }
        },
        "pre_delay": 100,
        "post_delay": 100
    }
}