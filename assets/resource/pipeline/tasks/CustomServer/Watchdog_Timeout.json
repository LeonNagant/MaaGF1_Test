{
    "!Watchdog_Timeout_Test": {
        "next": [
            "Start_Watchdog_Short"
        ]
    },
    "Start_Watchdog_Short": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_start",
        "custom_action_param": {
            "timeout_ms": 3000,
            "info": "超时测试看门狗 - 3秒超时"
        },
        "pre_delay": 100,
        "post_delay": 500,
        "next": [
            "Feed_Watchdog_Once"
        ]
    },
    "Feed_Watchdog_Once": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_feed",
        "pre_delay": 1000,
        "post_delay": 500,
        "next": [
            "Notify_Initial_Feed"
        ]
    },
    "Notify_Initial_Feed": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "看门狗超时测试：初始喂狗完成，将等待{wait_time}秒触发超时（超时阈值：3秒）",
            "parameters": {
                "wait_time": "10"
            }
        },
        "pre_delay": 100,
        "post_delay": 10000,
        "next": [
            "Check_Timeout_Status"
        ]
    },
    "Check_Timeout_Status": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "等待结束！看门狗应该已经触发超时警告。测试步骤：{count}",
            "parameters": {
                "count": "{increment_Task_Counter}"
            }
        },
        "pre_delay": 100,
        "post_delay": 2000,
        "next": [
            "Feed_After_Timeout"
        ]
    },
    "Feed_After_Timeout": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_feed",
        "pre_delay": 1000,
        "post_delay": 500,
        "next": [
            "Notify_Recovery"
        ]
    },
    "Notify_Recovery": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "超时后恢复喂狗，看门狗应该重新开始计时",
            "parameters": {}
        },
        "pre_delay": 100,
        "post_delay": 2000,
        "next": [
            "Stop_Watchdog_Final"
        ]
    },
    "Stop_Watchdog_Final": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "watchdog_stop",
        "custom_action_param": {
            "info": "超时测试完成，看门狗停止"
        },
        "pre_delay": 100,
        "post_delay": 500,
        "next": [
            "Final_Summary"
        ]
    },
    "Final_Summary": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_extnotify",
        "custom_action_param": {
            "message": "看门狗超时测试完成，总执行步骤：{count}",
            "parameters": {
                "count": "{increment_Task_Counter}"
            }
        },
        "pre_delay": 100,
        "post_delay": 100
    }
}