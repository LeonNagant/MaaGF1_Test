{
    "!Notify_Telegram_Task": {
        "next": [
            "Notify_Telegram_Node"
        ]
    },
    "Notify_Telegram_Node": {
        "recognition": "DirectHit",
        "action": "Custom",
        "custom_action": "parametric_telegram",
        "custom_action_param": {
            "type": "info",
            "message": "电报测试消息：{status}，当前次数：{count}",
            "parameters": {
                "status": "正常",
                "count": "{increment_Task_Counter}"
            }
        },
        "pre_delay": 100,
        "post_delay": 100
    }
}